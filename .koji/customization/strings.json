{
  "strings": {
    "fontFamily": "https://fonts.googleapis.com/css?family=Russo+One",
    "title": "Game Template",
    "instructions1": "This is an extension of the P5 Scaffold with added functionalities",
    "instructions2": "Some of the stuff included:",
    "instructions3": "Main menu, sound button, scaling, custom fonts, leaderboard, camera",
    "gameOverText": "GAME OVER",
    "highScoreText": "High Score:",
    "playButtonText": " PLAY ",
    "scoreText": "Score:",
    "highscoreText": "High Score:",
    "highscoreGainedText": "New High Score!",
    "health": "3",
    "lives": 3,
    "scoreGain": 1,
    "enableCursor": true,
    "leaderboardButtonText": "LEADERBOARD",
    "emailInputEnabled": true,
    "optInText": "Keep me updated!",
    "maxParticles": 150,
    "maxParticlesMobile": 50
  },
  "@@editor": [
    {
      "key": "strings",
      "name": "Game Settings",
      "icon": "ðŸ’¡",
      "source": "strings.json",
      "fields": [
        {
          "key": "title",
          "name": "Game Title",
          "description": "The title that is displayed in the start menu",
          "type": "text"
        },
        {
          "key": "instructions1",
          "name": "Game Instructions 1",
          "type": "text"
        },
        {
          "key": "instructions2",
          "name": "Game Instructions 2",
          "type": "text"
        },
        {
          "key": "instructions3",
          "name": "Game Instructions 3",
          "type": "text"
        },
        {
          "key": "fontFamily",
          "name": "Font Family",
          "description": "Google fonts link to font to use in the game",
          "type": "text"
        },
        {
          "key": "playButtonText",
          "name": "Play Button Text",
          "description": "Label on the Play Button",
          "type": "text"
        },
        {
          "key": "leaderboardButtonText",
          "name": "Leaderboard Button Text",
          "description": "Label on the Leaderboard Button",
          "type": "text"
        },
        {
          "key": "lives",
          "name": "Max Lives",
          "description": "How many lives you initially have",
          "type": "range",
          "typeOptions": {
            "min": 1,
            "max": 15
          }
        },
        {
          "key": "scoreGain",
          "name": "Score Gain",
          "description": "Basic score gain",
          "type": "range",
          "typeOptions": {
            "min": 0,
            "max": 500
          }
        },
        {
          "key": "maxParticles",
          "name": "Maximum Particles",
          "description": "Maximum allowed particles on desktop. Larger numbers may negatively impact performance.",
          "type": "range",
          "typeOptions": {
            "min": 0,
            "max": 500
          }
        },
        {
          "key": "maxParticlesMobile",
          "name": "Maximum Particles - Mobile",
          "description": "Maximum allowed particles on mobile. This is usually lower than for desktop.",
          "type": "range",
          "typeOptions": {
            "min": 0,
            "max": 500
          }
        },
        {
          "key": "enableCursor",
          "name": "Enable Cursor",
          "description": "Show/Hide Cursor on PC during the game (visible on main menu)",
          "type": "boolean"
        },
        {
          "key": "emailInputEnabled",
          "name": "Enable E-Mail Input",
          "description": "Enable/Disable E-Mail input while submitting score.",
          "type": "boolean"
        },
        {
          "key": "optInText",
          "name": "Email Opt In Text",
          "description": "The text displayed next to the opt in checkbox",
          "type": "text"
        }
      ]
    }
  ]
}